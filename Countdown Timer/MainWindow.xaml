<Window x:Class="Countdown_Timer.MainWindow"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Countdown_Timer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        FontSize="18" FontFamily="Segoe UI Light" Background="#f4f4f4">
    
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <!--Row 1-->
        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" >
            <TextBlock Style="{StaticResource TbHeader}" Text="Contadores"
                       HorizontalAlignment="Center"/>
        </StackPanel>
        <!--Row 2-->
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical">
            <Button Style="{StaticResource BtnMain}" Content="Nova Contagem"
                    x:Name="BtnNewCount" Click="BtnNewCount_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Vertical"
                    HorizontalAlignment="Center" Grid.ColumnSpan="2">
            
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center" Grid.ColumnSpan="2">
                <TextBlock Style="{StaticResource TbCurrentlyTime}"
                       Text="Atualmente"/>
                <TextBlock Style="{StaticResource TbCurrentlyTime}"
                       Text="{Binding CurrentlyDate, StringFormat=g}"/>
            </StackPanel>

            <!--Temp-->
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource TbCurrentlyTime}"
                       Text="{Binding NewCountdown.CountdownName}"/>
                <TextBlock Style="{StaticResource TbCurrentlyTime}"
                       Text="{Binding NewCountdown.CountdownDateTime, StringFormat=g}"/>
            </StackPanel>
            <!--Countdown-->
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource TbCurrentlyTime}"
                       Text="Tempo Restante"/>
                <TextBlock Style="{StaticResource TbCurrentlyTime}"
                       Text="{Binding NewCountdown.CountdownSpan, 
                    StringFormat=d\\:hh\\:mm\\:ss}">
                </TextBlock>
            </StackPanel>
            <!--Temp-->
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Vertical">
            <ListBox Style="{StaticResource LbCountdown}">

            </ListBox>
        </StackPanel>
        <!--Row 3-->
    </Grid>
</Window>
